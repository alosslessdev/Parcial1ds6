<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".metas">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Escriba su meta para esta semana."
        android:textColor="#FF0000"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editMeta"
        android:autofillHints=""
        android:hint="Ejemplo: correr 50km"
        android:background="@drawable/boton_gradiente"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/btnGuardarMeta"
        android:onClick="GuardarMeta"
        android:layout_width="91dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_save"
        android:contentDescription="Guardar Meta" />

    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
