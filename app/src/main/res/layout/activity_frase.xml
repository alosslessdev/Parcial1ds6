<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frase">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Necesitas Motivacion?"
        android:textColor="#FF0000"
        android:textSize="30sp"
        />

    <ImageButton
        android:id="@+id/rengokuMotivacion"
        android:layout_width="342dp"
        android:layout_height="351dp"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:scaleType="centerInside"
        android:src="@drawable/rengoku"
        android:contentDescription="Vive con orgullo."/>


    <Button
        android:id="@+id/btnMotivame"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_gradiente"
        android:text="Motivame"
        android:textColor="#FFF" />
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:onClick="btnVolver"
        android:layout_margin="16dp"
        android:layout_gravity="start"
        android:backgroundTint="@color/purple_500"
        android:background="@drawable/boton_gradiente"
        />

</LinearLayout>
